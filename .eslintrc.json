{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": [
        "xo-typescript"
      ],
      "files": [
        "*.ts",
        "*.tsx"
      ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": "error",
    "indent": ["error", 2]
  }
}
